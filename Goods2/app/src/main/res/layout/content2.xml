<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_margin="0dp"
    android:layout_marginTop="0px"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.baoliang.goods.MainPage.MainPage"
    tools:showIn="@layout/app_bar_main_page"

    >
    <!--<TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="content2"
        />-->
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2label_acnum"
        android:layout_marginTop="?attr/actionBarSize"
        android:text="订单号"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2input_acnum"
        android:background="@drawable/edit_bg"
        android:layout_toEndOf="@id/content2label_acnum"
        android:layout_marginTop="?attr/actionBarSize"
        android:editable="false"

        />


    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/content2label_boss"
        android:layout_below="@id/content2input_acnum"
        android:layout_marginTop="20dp"
        android:text="订单人"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2input_boss"
        android:background="@drawable/edit_bg"
        android:layout_toEndOf="@+id/content2label_boss"
        android:layout_marginTop="20dp"
        android:layout_below="@id/content2input_acnum"
        android:editable="false"
        />



    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2label_phone"
        android:layout_below="@+id/content2label_boss"
        android:layout_marginTop="20dp"
        android:text="电话"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/content2input_phone"
        android:background="@drawable/edit_bg"
        android:layout_below="@+id/content2label_boss"
        android:layout_toEndOf="@+id/content2label_phone"
        android:editable="false"
        />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2label_goods"
        android:layout_below="@+id/content2input_phone"
        android:layout_marginTop="20dp"
        android:text="货物"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2input_goods"
        android:background="@drawable/edit_bg"
        android:layout_below="@+id/content2input_phone"
        android:layout_toEndOf="@+id/content2label_goods"
        android:layout_marginTop="20dp"
        android:editable="false"
        />



    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2label_start"
        android:layout_below="@+id/content2input_goods"
        android:layout_marginTop="20dp"
        android:text="起始位置"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2input_start"
        android:background="@drawable/edit_bg"
        android:layout_below="@+id/content2input_goods"
        android:layout_toEndOf="@+id/content2label_start"
        android:layout_marginTop="20dp"
        android:editable="false"
        />



    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2label_destination"
        android:layout_below="@+id/content2input_start"
        android:layout_marginTop="20dp"
        android:text="目的地"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2input_destination"
        android:background="@drawable/edit_bg"
        android:layout_below="@+id/content2input_start"
        android:layout_toEndOf="@+id/content2label_destination"
        android:layout_marginTop="20dp"
        android:editable="false"
        />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2label_weight"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/content2input_destination"
        android:text="重量(吨)"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2input_weight"
        android:background="@drawable/edit_bg"
        android:layout_toEndOf="@+id/content2label_weight"
        android:layout_below="@+id/content2input_destination"
        android:layout_marginTop="20dp"
        android:editable="false"
        />

    <Button
        android:id="@+id/setapstatuebtn"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_alignEnd="@+id/content2input_weight"
        android:layout_below="@+id/content2label_weight"
        android:width="200dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="33dp"
        android:text="设置订单完成" />


</RelativeLayout>